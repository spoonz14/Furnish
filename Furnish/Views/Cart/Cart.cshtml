@model List<Furnish.Models.Cart>

@{
    ViewData["Title"] = "Cart";
}

<h1>Your Cart</h1>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Category</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Checkout</a>
        <a asp-controller="Products" asp-action="All" class="btn btn-primary">Keep Shopping</a>
        <a asp-controller="Cart" asp-action="ClearCart" class="btn btn-danger">Clear Cart</a>
    </div>
}
