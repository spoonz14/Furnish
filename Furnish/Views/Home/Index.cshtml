@{
    ViewBag.Title = "Home";
}

<h1>Furnish: Your Friendly Neighbourhood Furniture Store</h1>

@if (TempData.ContainsKey("SuccessMessage"))
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
<p>Make yourself at home and check out some cool digs.</p>

<div class="row">
    <div class="col-sm-4">
        <div class="list-group">
            <a asp-controller="Product" asp-action="List" class="list-group-item">View our products</a>
            <a asp-controller="Home" asp-action="About" class="list-group-item">Learn more about us</a>
        </div>
    </div>
</div>
